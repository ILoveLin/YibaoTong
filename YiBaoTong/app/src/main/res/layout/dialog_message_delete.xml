<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_message_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:text="删除该消息"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_12"
        android:background="@drawable/selector_ffffff_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_14" />
    <TextView
        android:id="@+id/dialog_pop_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:text="删除该消息"
        android:gravity="center|left"
        android:visibility="gone"
        android:paddingLeft="@dimen/padding_12"
        android:background="@drawable/selector_pop_top"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_14" />
    <TextView
        android:id="@+id/dialog_pop_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:text="删除该消息"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_13"
        android:visibility="gone"
        android:background="@drawable/selector_pop_bottom"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_14" />
</LinearLayout>