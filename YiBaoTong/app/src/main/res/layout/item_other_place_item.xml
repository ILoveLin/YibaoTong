<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_ffffff"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/padding_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_other_place_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复方氨酚烷氨片"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_14" />
        <TextView
            android:id="@+id/tv_item_other_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复方氨酚烷氨片"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_12" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_other_place_time"
        style="@style/Font_Small_Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>