<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_plan2_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <View style="@style/LineItemStyleE0E0E0" />

    <LinearLayout
        android:id="@+id/linear_plan_detail_price"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_plan_detail_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="6"
            android:singleLine="true"
            android:text="阿莫西林"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_15" />


        <TextView
            android:id="@+id/tv_plan_detail_drug_scanname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="6"
            android:singleLine="true"
            android:text="厄贝沙坦氢氯噻嗪片"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_plan_detail_drug_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/tv_plan_detail_drug_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_5"
            android:text="28.75"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_font_14" />

        <TextView
            android:id="@+id/tv_plan_detail_drug_red_money"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/tv_plan_detail_drug_red_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_10"
            android:text="8.62"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/text_font_18" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tv_plan_detail_hospital_pic"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/padding_170" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_18"
        android:layout_marginTop="@dimen/padding_18">

        <TextView
            android:id="@+id/tv_plan_detail_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:drawableLeft="@mipmap/bg_drug_detail_go_commonity"
            android:drawablePadding="@dimen/padding_5"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text="海淀医院"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_16" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_plan_detail_hospital">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_14">

                <TextView
                    android:id="@+id/tv_drugs_detail_hospital_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_drug_detail_level"
                    android:drawablePadding="@dimen/padding_5"
                    android:text="未"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_15" />



                <TextView
                    android:id="@+id/tv_drugs_detail_hospital_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:drawableLeft="@mipmap/icon_drug_detail_position"
                    android:drawablePadding="@dimen/padding_5"
                    android:text="3.8km"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_15" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear_plan_detail_goto_there"
            android:layout_width="@dimen/padding_94"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onBtnClick"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_plan_detail_goto_there" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:text="到这去"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/padding_2"
            android:layout_toLeftOf="@id/linear_plan_detail_goto_there"
            android:background="@color/color_999999" />
    </RelativeLayout>

    <View style="@style/LineItemStyleE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_62"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.lzyc.ybtappcal.view.RatingBar xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_plan_detail_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            ratingbar:RatingBarclickable="true"
            ratingbar:RatingBarstarCount="5"
            ratingbar:RatingBarstarEmpty="@mipmap/icon_hospital_star_nor"
            ratingbar:RatingBarstarFill="@mipmap/icon_hospital_star_pre"
            ratingbar:RatingBarstarHalf="@mipmap/icon_hospital_star_pre"
            ratingbar:RatingBarstarImageSize="26dp" />

        <TextView
            android:id="@+id/hc_fuwutaidu_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:text="5.0"
            android:textColor="@color/color_7486c1"
            android:textSize="@dimen/text_font_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_plan_commniuty_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="43人评论"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/padding_15" />

    </LinearLayout>

    <View style="@style/LineItemStyleE0E0E0" />


    <TextView
        android:id="@+id/tv_plan_goto_detail_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_55"
        android:background="@mipmap/bg_plan_detail_look_else_hospition"
        android:clickable="true"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="onBtnClick"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:text="查看其它开药医院"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/padding_17" />


</LinearLayout>
