<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_17">

        <LinearLayout
            android:id="@+id/tv_popup_share_weixin"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="微信"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_popup_share_pyq"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_wechat_friendcircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="朋友圈"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_popup_share_wb"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_sina_weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="新浪微博"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_17"
        android:paddingTop="@dimen/padding_30">

        <LinearLayout
            android:id="@+id/tv_popup_share_qq"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="QQ"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_popup_share_qzone"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_qzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="QQ空间"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_popup_share_copy"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_40"
                android:src="@mipmap/image_share_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="复制链接"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/LineItemStyleE0E0E0" />

    <TextView
        android:id="@+id/tv_popup_share_cancel"
        style="@style/Font_Big_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_000000" />

</LinearLayout>
