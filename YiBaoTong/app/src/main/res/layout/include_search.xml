<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/color_eeeeee"
    android:id="@+id/actionbar">

        <!--搜索-->
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_2"
            android:background="@drawable/shape_bg_top_search_out_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/include_search_dingwei"
                    android:text="北京"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/icon_position_homepage"
                    android:drawablePadding="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:textColor="@color/color_ffffff"
                    android:clickable="true"
                    android:textSize="@dimen/text_font_16" />

                <LinearLayout
                    android:id="@+id/include_search_input"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_top_search"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_15"
                        android:paddingRight="@dimen/padding_5"
                        android:src="@mipmap/icon_search" />

                    <TextView
                        style="@style/FontStyleWhite"
                        android:textSize="@dimen/text_font_14"
                        android:text="请输入药品名称"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/include_search_scan"
        style="@style/FontStyleWhite"
        android:clickable="true"
        android:textSize="@dimen/text_font_8"
        android:drawableTop="@mipmap/icon_scan"
        android:drawablePadding="@dimen/padding_1"
        android:layout_marginRight="@dimen/padding_10"
        android:text="@string/home_scan"/>

</LinearLayout>
