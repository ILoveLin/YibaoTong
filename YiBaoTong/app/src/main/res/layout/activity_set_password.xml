<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_377eb4"
    android:orientation="vertical">

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_32"
        android:src="@mipmap/gb_register_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_45"
        android:background="@drawable/shape_ffffff_35"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">
        <EditText
            android:id="@+id/et_pwd"
            style="@style/Font_Middle_Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_ffffff_00"
            android:drawableLeft="@mipmap/icon_login_password"
            android:drawablePadding="@dimen/padding_10"
            android:hint="密码由6-16位数字、字母或符号组成"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_font_12"
            android:textColorHint="@color/color_cccccc" />

        <CheckBox
            android:id="@+id/cb_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_00"
            android:button="@drawable/selector_password"
            android:checked="false" />

    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/padding_145"
        android:id="@+id/bt_set_pw"
        style="@style/LoginButtonStyle"
        android:text="完成" />
</LinearLayout>
