<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_dingwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center|left"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/padding_10"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/header_search_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:paddingRight="@dimen/padding_5"
            android:src="@mipmap/icon_search_dingwei"
            />
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:text="@string/prompt_dingweing"
            android:textColor="@color/color_43454e"
            android:textSize="@dimen/text_font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="GPS定位"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_font_13" />

    </LinearLayout>

    <View style="@style/LineStyleE5E5E5" />
    <!--历史访问城市-->
    <LinearLayout
        android:id="@+id/linear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="历史访问城市"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_15" />

        <com.lzyc.ybtappcal.view.NoScrollGridView
            android:id="@+id/gv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginRight="@dimen/padding_30" />
    </LinearLayout>
    <!--热门城市-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="热门城市"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_15" />

        <com.lzyc.ybtappcal.view.NoScrollGridView
            android:id="@+id/gv_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginRight="@dimen/padding_30" />
    </LinearLayout>
</LinearLayout>