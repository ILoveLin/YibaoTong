<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/item_drugs_history_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:gravity="center_vertical"
        android:background="@drawable/selector_drug_history">
        <TextView
            android:id="@+id/item_drugs_history_goodsname"
            style="@style/Font_Middle_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:drawableLeft="@mipmap/icon_search_history"
            android:drawablePadding="@dimen/padding_5"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_font_14"
            android:paddingTop="@dimen/padding_15"
            android:paddingBottom="15.5dp"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_5"
            />
        <TextView
            android:id="@+id/item_drugs_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/item_drugs_history_goodsname"
            android:textSize="@dimen/text_font_12"
            android:textColor="@color/color_666666"
            android:paddingRight="@dimen/padding_10"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_drugs_history_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_696969"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/padding_15"
            android:paddingBottom="15.5dp"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:textSize="@dimen/text_font_12"
            />
    </RelativeLayout>

    <View
        android:id="@+id/item_drugs_history_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:background="@color/color_d9d9d9"
        />
</LinearLayout>