<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_chufangyao_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_9f000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_chufangyao_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-85dp"
            android:layout_marginTop="@dimen/padding_20"
            android:padding="@dimen/padding_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@mipmap/bg_buy_success"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_70">

                <TextView
                    android:id="@+id/chufangyao_success"
                    style="@style/FontStyleWhite"
                    android:layout_marginTop="-8dp"
                    android:text="@string/orderby_buy_success"
                    android:textSize="@dimen/text_font_16" />

                <TextView
                    android:id="@+id/chufangyao_connect"
                    style="@style/FontStyleWhite"
                    android:layout_below="@+id/chufangyao_success"
                    android:singleLine="true"
                    android:text="@string/orderby_buy_contact"
                    android:textSize="@dimen/text_font_12" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_40"
            android:background="@drawable/shape_bg_buy_toast"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/chufangyao_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_font_12" />

            <TextView
                android:id="@+id/chufangyao_return"
                style="@style/FontStyleRed"
                android:layout_width="match_parent"
                android:layout_marginBottom="-10dp"
                android:layout_marginTop="-10dp"
                android:padding="@dimen/padding_10"
                android:text="@string/orderby_buy_return_money"
                android:textSize="@dimen/text_font_16" />

        </LinearLayout>

        <TextView
            android:id="@+id/chufangyao_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/icon_shuomingshu_cancle" />

    </LinearLayout>


</LinearLayout>
