        <LinearLayout
            android:id="@+id/linear_sort_renkedu"
            android:layout_width="@dimen/titleview_left_width"
            android:layout_height="match_parent"
            android:background="@drawable/shape_results_item_left"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/padding_2"
            android:paddingTop="@dimen/padding_33"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_results_item_right"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_15"
            android:paddingTop="@dimen/padding_15">

            <TextView
                android:id="@+id/tv_title_drugname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/padding_15"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_10"
                android:text="安博维 厄贝沙坦片(薄膜衣)"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/padding_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_title_vender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingBottom="@dimen/padding_15"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_10"
                android:text="(法国)赛诺菲-温斯洛普公司"
                android:textColor="@color/color_999ea1"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>