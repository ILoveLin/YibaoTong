<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa"
    android:orientation="vertical">
    <View
        style="@style/LineItemStyle"
        android:background="@color/color_cecece"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@mipmap/bg_drug_m"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="25dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="190dp"
                    android:text="三十岁时的手势点"
                    android:minWidth="0dp"
                    android:layout_marginRight="@dimen/padding_5"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/text_font_18" />

                <TextView
                    android:id="@+id/tv_drug_detail_nickname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_14"
                    android:layout_marginRight="@dimen/padding_30"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#80FFFFFF"
                     />

                <ImageView
                    android:id="@+id/scan_reslut_iv_m"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding_4"
                    android:src="@mipmap/icon_barcode_m"
                    android:visibility="gone" />
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/tv_drug_detail_spec"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/padding_20"-->
                <!--android:layout_marginTop="@dimen/padding_18"-->
                <!--android:gravity="center_vertical"-->
                <!--android:singleLine="true"-->
                <!--android:ellipsize="end"-->
                <!--android:layout_marginRight="@dimen/padding_40"-->
                <!--android:textColor="@color/color_ffffff"-->
                <!--android:textSize="@dimen/text_font_14" />-->

            <TextView
                android:id="@+id/tv_drug_detail_vender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginLeft="@dimen/padding_22"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_30"
                android:gravity="left|center"
                android:textColor="@color/color_ffffff"
                android:text="厂商少时诵诗书是是"
                android:textSize="@dimen/text_font_14"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/color_fafafa"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_empty"
            />
        <TextView
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很抱歉，暂时没有本药品详细信息。"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_14" />

        <TextView
            android:id="@+id/tv_desc_drug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            android:text="去扫一扫其他药品吧"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_14" />

        <TextView
            android:id="@+id/empty_drug_recomment"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@drawable/shape_bg_renkdu"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onBtnClick"
            android:visibility="visible"
            android:textSize="@dimen/text_font_14"
            android:textColor="@color/color_333333"
            android:text="推荐" />
    </LinearLayout>

</LinearLayout>

