<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_3"
        android:background="@color/color_eeeeee"/>

    <RelativeLayout
        android:id="@+id/rel_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        >

        <TextView
            android:id="@+id/img_hot"
            style="@style/FontStyleRed"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_homepage_hot"
            android:gravity="center"
            android:text="热销"/>

        <TextView
            style="@style/FontStyleGrey"
            android:textColor="@color/color_000000_90"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:drawablePadding="@dimen/padding_10"
            android:textSize="@dimen/text_font_12"
            android:layout_marginRight="@dimen/padding_10"
            android:text="更多"/>

    </RelativeLayout>

    <View
        style="@style/LineItemStyleE0E0E0_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_drug_01"
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_11"
            android:paddingBottom="@dimen/padding_5"
            android:background="@color/color_ffffff"
            >

            <ImageView
                android:src="@mipmap/test"
                android:id="@+id/img_drug_01"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_price_01"
                    style="@style/FontStyleBlack"
                    android:textColor="@color/color_000000_90"
                    android:text="26.00元"/>

                <TextView
                    style="@style/FontStyleWhite"
                    android:textSize="@dimen/text_font_10"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_2"
                    android:paddingRight="@dimen/padding_2"
                    android:gravity="center"
                    android:text="@string/home_return"
                    android:background="@mipmap/ba_home_page_tag"/>

                <TextView
                    android:id="@+id/tv_return_price_01"
                    android:textSize="@dimen/text_font_17"
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="4"/>

                <TextView
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="元"/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/Style_vLine"/>

        <LinearLayout
            android:id="@+id/lin_drug_02"
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_11"
            android:paddingBottom="@dimen/padding_5"
            android:background="@color/color_ffffff"
            >

            <ImageView
                android:src="@mipmap/test"
                android:id="@+id/img_drug_02"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_price_02"
                    style="@style/FontStyleBlack"
                    android:textColor="@color/color_000000_90"
                    android:text="26.00元"/>

                <TextView
                    style="@style/FontStyleWhite"
                    android:textSize="@dimen/text_font_10"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_2"
                    android:paddingRight="@dimen/padding_2"
                    android:gravity="center"
                    android:text="@string/home_return"
                    android:background="@mipmap/ba_home_page_tag"/>

                <TextView
                    android:id="@+id/tv_return_price_02"
                    android:textSize="@dimen/text_font_17"
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="4"/>

                <TextView
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="元"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/LineItemStyleE0E0E0_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_drug_03"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_11">

            <ImageView
                android:id="@+id/img_drug_03"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_price_03"
                    style="@style/FontStyleBlack"
                    android:text="26.00元"
                    android:textColor="@color/color_000000_90" />

                <TextView
                    style="@style/FontStyleWhite"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:background="@mipmap/ba_home_page_tag"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_2"
                    android:paddingRight="@dimen/padding_2"
                    android:text="@string/home_return"
                    android:textSize="@dimen/text_font_10" />

                <TextView
                    android:id="@+id/tv_return_price_03"
                    style="@style/FontStyleRed"
                    android:text="4"
                    android:textColor="@color/color_f53838"
                    android:textSize="@dimen/text_font_17" />

                <TextView
                    style="@style/FontStyleRed"
                    android:text="元"
                    android:textColor="@color/color_f53838" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/Style_vLine"/>

        <LinearLayout
            android:id="@+id/lin_drug_04"
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_11"
            android:paddingBottom="@dimen/padding_5"
            android:background="@color/color_ffffff"
            >

            <ImageView
                android:src="@mipmap/test"
                android:id="@+id/img_drug_04"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_price_04"
                    style="@style/FontStyleBlack"
                    android:textColor="@color/color_000000_90"
                    android:text="26.00元"/>

                <TextView
                    style="@style/FontStyleWhite"
                    android:textSize="@dimen/text_font_10"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_2"
                    android:paddingRight="@dimen/padding_2"
                    android:gravity="center"
                    android:text="@string/home_return"
                    android:background="@mipmap/ba_home_page_tag"/>

                <TextView
                    android:id="@+id/tv_return_price_04"
                    android:textSize="@dimen/text_font_17"
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="4"/>

                <TextView
                    style="@style/FontStyleRed"
                    android:textColor="@color/color_f53838"
                    android:text="元"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>