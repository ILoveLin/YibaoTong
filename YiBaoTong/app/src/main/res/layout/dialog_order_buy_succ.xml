<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/lin_dialog">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_order_succ_bg" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:background="@drawable/shape_bottom_corner"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_insurance"
            style="@style/ww"
            android:layout_marginBottom="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_20"
            android:text="恭喜您，获得50元保险"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_info"
            style="@style/ww"
            android:layout_marginBottom="@dimen/padding_30"
            android:text="领取后将享受购药报销的优惠"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_receive"
            style="@style/FontStyleWhite"
            android:layout_marginBottom="@dimen/padding_15"
            android:background="@drawable/selector_order_succ_btn"
            android:gravity="center"
            android:text="前往领取"
            android:textSize="@dimen/text_font_17" />

    </LinearLayout>

</LinearLayout>

