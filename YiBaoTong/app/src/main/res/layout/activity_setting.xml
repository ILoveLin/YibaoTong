<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">

    <View style="@style/LineStyle" />

    <View
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/padding_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/FontStyle"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_10"
            android:text="消息通知" />

        <com.lzyc.ybtappcal.view.SwitchButtom
            android:id="@+id/setting_switch_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <LinearLayout
        android:id="@+id/setting_linear_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_ffffff"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onBtnClick">

        <TextView
            android:id="@+id/tv_setting_changepw"
            style="@style/FontStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_10"
            android:text="清除缓存" />

        <TextView
            android:id="@+id/setting_tv_chache_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right|center_vertical"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_font_14" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <View
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/padding_10" />

    <TextView
        android:id="@+id/setting_tv_about"
        style="@style/FontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/selector_item_ffffff"
        android:clickable="true"
        android:drawableRight="@mipmap/icon_forword_right0"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10"
        android:text="关于我们" />

    <View style="@style/LineStyle" />

    <TextView
        android:id="@+id/setting_tv_feedback"
        style="@style/FontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_ffffff"
        android:clickable="true"
        android:drawableRight="@mipmap/icon_forword_right0"
        android:padding="@dimen/padding_10"
        android:visibility="gone"
        android:text="意见反馈" />

    <View style="@style/LineStyle" android:visibility="gone" />


    <TextView
        android:id="@+id/setting_tv_update"
        style="@style/FontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_ffffff"
        android:clickable="true"
        android:drawableRight="@mipmap/icon_forword_right0"
        android:padding="@dimen/padding_10"
        android:text="版本更新" />

    <View style="@style/LineStyleE5E5E5" />

    <View
        android:id="@+id/setting_logout_line"
        style="@style/LineStyleE5E5E5"
        android:layout_marginTop="@dimen/padding_10" />

    <TextView
        android:id="@+id/setting_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="@dimen/padding_40"
        android:background="@drawable/selector_item_ffffff"
        android:gravity="center"
        android:onClick="onBtnClick"
        android:text="退出登录"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16" />

    <View android:id="@+id/setting_tv_logout_bottom" style="@style/LineStyleE5E5E5" />

</LinearLayout>
