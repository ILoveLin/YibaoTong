<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pop_hongbao_linear"
    android:background="@color/color_9f000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_toast_red_bag" />

        <LinearLayout
            android:id="@+id/pop_hongbao_num_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_hongbao_num_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_e4b162"
                android:background="@mipmap/red_bag2"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_hongbao_num_right"
                android:layout_width="26dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/padding_5"
                android:textColor="@color/color_e4b162"
                android:background="@mipmap/red_bag2"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你买药，我报销"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_font_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多优惠，可以关注医保通用药险"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_font_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可在“我的”查看"
            android:textColor="@color/color_851212"
            android:layout_marginTop="340dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_font_13"
            />
    </RelativeLayout>

</LinearLayout>
