<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_hc_linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">

        <LinearLayout
            android:id="@+id/id_about_community_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center|left"
                android:orientation="horizontal">

                <!--<com.lzyc.ybtappcal.view.roundimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/item_recomment_iv_covert"-->
                <!--android:layout_width="36dp"-->
                <!--android:layout_height="36dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@mipmap/image_default_avatar_hospital"-->
                <!--app:border_color="@color/color_e0e0e0"-->
                <!--app:border_width="0.5dp"-->
                <!--app:corner_radius="@dimen/padding_5"-->
                <!--app:oval="true" />-->
                <!--<com.lzyc.ybtappcal.widget.MyRoundImageView-->
                <!--android:id="@+id/item_recomment_iv_covert"-->
                <!--android:layout_width="36dp"-->
                <!--android:layout_height="36dp"-->
                <!--android:background="@mipmap/icon_mine_image"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--app:border_outside_color="@color/color_e0e0e0"-->
                <!--app:border_thickness="1dp" />-->

                <com.lzyc.ybtappcal.widget.MyRoundImageView
                    android:id="@+id/item_recomment_iv_covert"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/icon_system_logo"
                    pv:border_outside_color="@color/color_e0e0e0"
                    pv:border_thickness="1dp" />

                <TextView
                    android:id="@+id/item_hc_tv_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="13881005611"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/padding_13" />

                <com.lzyc.ybtappcal.view.StarBar
                    android:id="@+id/test_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    pv:starCount="5"
                    pv:starDistance="5dp"
                    pv:starEmpty="@mipmap/icon_hospital_star_nor"
                    pv:starFill="@mipmap/icon_hospital_star_pre"
                    pv:starSize="19dp" />
                <!--<com.lzyc.ybtappcal.view.RatingBar xmlns:ratingbar="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/test_star"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--ratingbar:RatingBarclickable="true"-->
                <!--ratingbar:RatingBarstarCount="5"-->
                <!--ratingbar:RatingBarstarEmpty="@mipmap/icon_hospital_star_nor"-->
                <!--ratingbar:RatingBarstarFill="@mipmap/icon_hospital_star_pre"-->
                <!--ratingbar:RatingBarstarHalf="@mipmap/icon_hospital_star_pre"-->
                <!--ratingbar:RatingBarstarImageSize="20dp" />-->


                <TextView
                    android:id="@+id/item_community_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:text="4.0分"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_font_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/item_hc_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:text="服务态度良好，拿药也很方便，在这那的要也比旁边的药店便宜很多，非常推荐"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_13" />
        </LinearLayout>
        <!--时间 评论 点赞 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_hc_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="2016-06-20"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_font_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/item_hc_linea_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_9"
                android:paddingLeft="@dimen/padding_17"
                android:paddingRight="@dimen/padding_9"
                android:paddingTop="@dimen/padding_2">

                <ImageView
                    android:id="@+id/item_hc_iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_4"
                    android:clickable="true"
                    android:src="@drawable/selector_hc_like" />

                <TextView
                    android:id="@+id/item_hc_tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_2"
                    android:text="(2)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item_hc_linea_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onBtnClick"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_9"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_16"
                android:paddingTop="@dimen/padding_2">


                <ImageView
                    android:id="@+id/item_hc_iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_4"
                    android:clickable="true"
                    android:src="@mipmap/icon_hospital_comment" />

                <TextView
                    android:id="@+id/item_hc_tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_11" />
            </LinearLayout>

        </LinearLayout>
        <View style="@style/LineStyle" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_hc_emptyview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:drawablePadding="@dimen/padding_13"
        android:drawableTop="@mipmap/icon_hospital_comment_empity"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_40"
        android:paddingTop="@dimen/padding_40"
        android:text="还没有人评价哦"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_font_15"
        android:visibility="gone" />
</RelativeLayout>