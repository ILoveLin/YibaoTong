<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/child_expandable_drug"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_12"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_12">

        <ImageView
            android:id="@+id/child_effective_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:src="@drawable/selector_shopping_selected"
            android:visibility="visible" />

        <TextView
            android:id="@+id/child_invalid_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:text="@string/cart_invalid_desc"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_font_13"
            android:layout_marginRight="@dimen/padding_5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_drug_image"
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_80"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/test" />

        <LinearLayout
            android:id="@+id/child_expandable_drug_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_drug_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:layout_marginLeft="-7dp"
                    android:alpha="0.96"
                    android:includeFontPadding="false"
                    android:text="【处方】"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:id="@+id/item_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:alpha="0.96"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lines="2"
                    android:text="               安博维 厄贝沙坦氢録赛呗贝沙坦氢録赛呗贝沙坦氢録赛呗贝沙坦氢録赛呗贝沙坦氢録赛呗"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/text_font_14" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_40">

                <LinearLayout
                    android:id="@+id/child_effective_return_moeny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-1dp"
                    android:gravity="left"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医保通【返现】"
                        android:textColor="@color/color_f51f1f"
                        android:textSize="@dimen/text_font_10" />

                    <TextView
                        android:id="@+id/child_effective_fanxian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥3.00"
                        android:textColor="@color/color_f51f1f"
                        android:textSize="@dimen/text_font_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child_effective_linear_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/child_effective_return_moeny"
                    android:layout_marginLeft="-1dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/fontOrderf23030"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="@dimen/text_font_11" />

                    <TextView
                        android:id="@+id/item_drug_price_unit"
                        style="@style/fontOrderf23030"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.633"
                        android:textSize="@dimen/text_font_15" />

                    <TextView
                        style="@style/FontStyleGrey"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="@dimen/text_font_10" />

                    <TextView
                        android:id="@+id/item_drug_price_retail"
                        style="@style/FontStyleGrey"
                        android:layout_height="wrap_content"
                        android:text="44.43"
                        android:textSize="@dimen/text_font_13" />

                    <View
                        android:layout_width="@dimen/padding_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child_drug_count_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_30"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_0">

                    <ImageButton
                        android:id="@+id/child_operator_subtraction"
                        android:layout_width="@dimen/padding_25"
                        android:layout_height="@dimen/padding_30"
                        android:background="@drawable/shape_operator_ffffff_left"
                        android:src="@mipmap/icon_operator_subtraction_black_pre" />

                    <TextView
                        android:id="@+id/child_drug_count"
                        android:layout_width="@dimen/padding_33"
                        android:layout_height="@dimen/padding_30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_2"
                        android:layout_marginRight="@dimen/padding_2"
                        android:alpha="0.7"
                        android:background="@color/color_f5f5f5"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="@dimen/padding_5"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/padding_14" />

                    <ImageButton
                        android:id="@+id/child_operator_addition"
                        android:layout_width="@dimen/padding_25"
                        android:layout_height="@dimen/padding_30"
                        android:background="@drawable/shape_operator_ffffff_right"
                        android:src="@mipmap/icon_operator_addition_black" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/child_invalid_data_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.96"
                android:text="暂时无货"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/text_font_14"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineStyle" />


    <View
        android:id="@+id/line_view_bottom3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_5"
        android:visibility="gone"
        />
   <View
        android:id="@+id/line_view_bottom2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_70"
        android:visibility="gone"
        />

</LinearLayout>