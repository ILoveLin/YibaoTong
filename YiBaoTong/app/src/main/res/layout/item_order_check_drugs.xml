<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f1f1f3"
    android:padding="@dimen/padding_10"
    android:layout_marginTop="@dimen/padding_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_drug"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@mipmap/image_drugs_picture"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/FontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="安博维 厄贝沙坦氢氯噻坦氢氯噻厄贝沙坦氢氯噻坦氢氯噻" />

        <TextView
            android:id="@+id/tv_specifications"
            style="@style/FontStyleGrey"
            android:layout_marginBottom="@dimen/padding_20"
            android:text="12.5mg*7/盒"
            android:textSize="@dimen/text_font_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/FontStyleRed"
                android:text="￥"
                android:textSize="@dimen/text_font_12" />

            <TextView
                android:id="@+id/tv_price_new"
                style="@style/FontStyleRed"
                android:text="36.43" />

            <TextView
                style="@style/FontStyleGrey"
                android:text="  ￥"
                android:textSize="@dimen/text_font_10" />

            <TextView
                android:id="@+id/tv_price_old"
                style="@style/FontStyleGrey"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="46.68"
                android:textSize="@dimen/text_font_13" />

            <TextView
                android:id="@+id/tv_drug_num"
                style="@style/FontStyleGrey"
                android:text="×2"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
