<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff_00"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_medicine"
        android:clickable="true"
        style="@style/FontStyle3e6398"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:background="@color/color_ffffff_00"
        android:drawableRight="@mipmap/icon_forword_right0"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10"
        android:text="药品名称" />

    <com.lzyc.ybtappcal.widget.ExtraGridView
        android:id="@+id/gv_item_medicine"
        style="@style/Style_gv"
        android:numColumns="2"
        android:visibility="gone"
        android:horizontalSpacing="@dimen/padding_10"
        android:verticalSpacing="@dimen/padding_10"
        android:layout_margin="@dimen/padding_10"/>
</LinearLayout>