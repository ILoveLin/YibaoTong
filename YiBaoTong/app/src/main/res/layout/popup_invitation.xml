<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ffffff_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.lzyc.ybtappcal.view.roundimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_popup_invitation_avator"
                android:layout_width="@dimen/padding_50"
                android:layout_height="@dimen/padding_50"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginTop="@dimen/padding_10"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_system_logo"
                app:border_color2="@color/color_d4d4d4"
                app:border_width2="@dimen/padding_0.5"
                app:corner_radius2="@dimen/padding_5"
                app:oval2="true" />

            <TextView
                android:id="@+id/tv_popup_invitation_nickname"
                style="@style/Font_Big_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="xiaoxigua"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/padding_130"
            android:layout_height="@dimen/padding_130">

            <ImageView
                android:id="@+id/iv_popup_invitation_qrcode"
                android:layout_width="@dimen/padding_120"
                android:layout_height="@dimen/padding_120"
                android:layout_gravity="center"
                android:src="@mipmap/image_qrcode" />

            <View style="@style/Style_vLine_E0E0E0" />

            <View style="@style/LineItemStyleE0E0E0" />

            <View
                style="@style/Style_vLine_E0E0E0"
                android:layout_gravity="right" />

            <View
                style="@style/LineItemStyleE0E0E0"
                android:layout_gravity="bottom" />

        </FrameLayout>

        <TextView
            style="@style/Font15Style666666"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:text="分享二维码\n邀请朋友一起来使用医保通"
            android:textSize="@dimen/text_font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_20">

            <LinearLayout
                android:id="@+id/tv_popup_share_weixin"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/padding_45"
                    android:layout_height="@dimen/padding_45"
                    android:src="@mipmap/image_share_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_14"
                    android:text="微信"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/text_font_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_popup_share_pyq"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/padding_45"
                    android:layout_height="@dimen/padding_45"
                    android:src="@mipmap/image_share_wechat_friendcircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_14"
                    android:text="朋友圈"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/text_font_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_popup_share_qq"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/padding_45"
                    android:layout_height="@dimen/padding_45"
                    android:src="@mipmap/image_share_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_14"
                    android:text="QQ"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/text_font_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_popup_share_wb"
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/padding_45"
                    android:layout_height="@dimen/padding_45"
                    android:src="@mipmap/image_share_sina_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_14"
                    android:text="新浪微博"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/text_font_12" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_popup_invitation_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/padding_20"
        android:src="@drawable/selector_pop_share_cancel_pre" />

</LinearLayout>
