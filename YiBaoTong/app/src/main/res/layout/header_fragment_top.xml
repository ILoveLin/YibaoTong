<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_homepage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="@drawable/selector_barcode" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--整体的原背景-->
            <RelativeLayout
                android:id="@+id/rel_anim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/bg_top_up2"
                    android:scaleType="centerInside" />
                <!--android:layout_marginTop="4.4dp"-->

                <ImageView
                    android:id="@+id/tv_start_anim"
                    android:layout_width="@dimen/x33"
                    android:layout_height="@dimen/x33"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x21"
                    android:layout_marginTop="4.4dp"
                    android:background="@mipmap/bg_top_btn_show"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_top_btn" />
            </RelativeLayout>
            <!--隐藏动画-->
            <LinearLayout
                android:id="@+id/linear_hidden"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@mipmap/bg_top_jianbian"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_81"
                    android:layout_marginTop="@dimen/padding_13"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_top_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="-1.5dp"
                        android:layout_marginLeft="@dimen/padding_9"
                        android:text="用好药"
                        android:textColor="#90ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="-1.5dp"
                        android:drawableLeft="@mipmap/icon_top_and"
                        android:text="更省钱"
                        android:textColor="#90ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_80"
                    android:layout_marginTop="@dimen/padding_14"
                    android:text="扫码或搜索,提供最省钱的用药方案."
                    android:textColor="#80ffffff"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--下半圆-->
            <RelativeLayout
                android:id="@+id/rel_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:background="@mipmap/bg_top_down"
                android:orientation="vertical"
                android:paddingRight="@dimen/x21">

                <TextView
                    android:id="@+id/tv_anim_under"
                    android:layout_width="@dimen/x33"
                    android:layout_height="25.5dp"
                    android:layout_alignParentRight="true"
                    android:text="" />
            </RelativeLayout>
            <!--最后的描述-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:background="@mipmap/bg_homepage"
                    android:gravity="center"
                    android:paddingTop="1dp"
                    android:text="药品电子监管码(20位) 或 条形码(13位)"
                    android:textColor="#60ffffff"
                    android:textSize="@dimen/text_font_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_21"
                    android:background="@mipmap/bg_homepage" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>