<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/selector_bg_round_corner_mb"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_70"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_11"
            android:layout_marginLeft="@dimen/padding_7"
            android:layout_marginRight="@dimen/padding_7"
            android:layout_marginTop="@dimen/padding_11"
            android:src="@mipmap/test" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--药品名-->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                android:text="安博维安博维安博维安博维安博维安博维安博维安博维安博维"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />

            <TextView
                android:id="@+id/tv_vender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="你看国父纪念馆肌肤那个"
                android:textColor="@color/manufacturer"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"/>

</LinearLayout>
