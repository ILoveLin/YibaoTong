<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f1f1f3"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d9d9d9"
        android:layout_marginRight="@dimen/padding_35"
        android:layout_marginLeft="@dimen/padding_15"/>
    <TextView
        android:id="@+id/tv_first_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:textSize="@dimen/text_font_15"
        android:visibility="gone"
        android:clickable="false"
        android:enabled="false"
        android:textColor="@color/color_43454e"
        android:layout_alignParentTop="true"
        android:background="@color/color_f1f1f3" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d9d9d9"
        android:layout_marginRight="@dimen/padding_35"
        android:layout_marginLeft="@dimen/padding_15"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_16"
        android:id="@+id/tv_contact_name"
        android:background="@drawable/selector_item_f1f1f3"
        android:textColor="@color/color_333333"
        android:padding="10dp"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_30"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d9d9d9"
        android:layout_marginRight="@dimen/padding_35"
        android:layout_marginLeft="@dimen/padding_15"/>
</LinearLayout>