<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                style="@style/LineItemStyle"
                android:background="@color/color_cecece"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_15"
                android:paddingTop="@dimen/padding_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_20">

                    <TextView
                        android:id="@+id/activity_reimbursement_utils_brand"
                        style="@style/Font_Big_Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:text="感康" />


                    <TextView
                        android:id="@+id/activity_reimbursement_utils_drugs_name"
                        style="@style/Font_Middle_Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_reimbursement_utils_brand"
                        android:text="复方氨酚烷胺片" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/activity_reimbursement_utils_drugs_specifications"
                    style="@style/Font_Small_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="规格：0.25g(每片重) *100/盒"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_reimbursement_utils_layout_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_below="@+id/activity_reimbursement_utils_layout_one"

                android:background="@color/color_ffffff"
                android:clickable="true">

                <TextView
                    android:id="@+id/activity_reimbursement_utils_message"
                    style="@style/Font_Middle_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="医保信息：" />

                <TextView
                    android:id="@+id/activity_reimbursement_utils_drugs_one"
                    style="@style/Font_Small_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_toRightOf="@+id/activity_reimbursement_utils_message"
                    android:background="@drawable/btn_blue_line_4"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_5"
                    android:text="甲类"
                     android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/activity_reimbursement_utils_drugs_two"
                    style="@style/Font_Small_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_toRightOf="@+id/activity_reimbursement_utils_drugs_one"
                    android:background="@drawable/btn_blue_line_4"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_5"
                    android:visibility="gone"
                    android:text="基药" />

                <TextView
                    android:id="@+id/activity_reimbursement_utils_drugs_three"
                    style="@style/Font_Small_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_toRightOf="@+id/activity_reimbursement_utils_drugs_two"
                    android:background="@drawable/btn_blue_line_4"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"
                    android:visibility="gone"
                    android:text="限制条件" />

                <ImageView
                    android:id="@+id/activity_reimbursement_utils_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_10"
                    android:onClick="onBtnClick"
                    android:paddingLeft="@dimen/padding_250"
                    android:src="@mipmap/icon_forword_right0" />

                <View
                    style="@style/LineStyleE5E5E5"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_reimbursement_utils_layout_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_45"
                android:layout_below="@+id/activity_reimbursement_utils_layout_two"
                android:layout_gravity="center_vertical"
                android:background="@color/color_ffffff">

                <TextView
                    android:id="@+id/activity_reimbursement_utils_can_reimbursement"
                    style="@style/Font_Middle_Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="可报销（门诊）：" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_reimbursement_utils_layout_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_reimbursement_utils_layout_three"
                android:background="@color/color_ffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.lzyc.ybtappcal.view.RoundProgressBar
                        android:id="@+id/activity_reimbursement_utils_workers"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_14"
                        android:text="城镇职工" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.lzyc.ybtappcal.view.RoundProgressBar
                        android:id="@+id/activity_reimbursement_utils_resident"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_14"
                        android:text="退休70以下" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.lzyc.ybtappcal.view.RoundProgressBar
                        android:id="@+id/activity_reimbursement_utils_xin_nong_he"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_14"
                        android:text="退休70以上" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_reimbursement_utils_layout_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_reimbursement_utils_layout_four"
                android:background="@color/color_ffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.lzyc.ybtappcal.view.RoundProgressBar
                        android:id="@+id/activity_reimbursement_utils_student"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_14"
                        android:paddingLeft="10dp"
                        android:text="城镇居民-老人-无业游民" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.lzyc.ybtappcal.view.RoundProgressBar
                        android:id="@+id/activity_reimbursement_utils_old"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_15"
                        android:layout_marginTop="@dimen/padding_14"
                        android:paddingLeft="10dp"
                        android:text="城镇居民-学生儿童" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/activity_reimbursement_utils_save"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_blue_5"
                android:gravity="center"
                android:onClick="onBtnClick"
                android:text="保存"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>