<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_30"
            android:background="@drawable/shape_ffffff_15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pop_typecity_linear_isopen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_city_isopenno"
                    android:layout_marginTop="@dimen/padding_14"
                    android:layout_marginBottom="@dimen/padding_13"
                    android:layout_gravity="center_horizontal"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_10"
                    android:text="亲，很抱歉!请切换城市\n目前本服务只在中国大陆可用"
                    android:textColor="@color/color_7486c1"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/color_f6f6f6"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_10"
                    android:text="热门城市"
                    android:paddingBottom="@dimen/padding_10"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View style="@style/LineItemStyleE0E0E0" />

            <GridView
                android:id="@+id/pop_typecity_gv_isopen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f1f1f3"
                android:divider="@null"
                android:entries="@array/type_city_isopen"
                android:listSelector="@color/color_f1f1f3"
                android:numColumns="3"
                android:padding="@dimen/padding_10" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_15"
                android:background="@drawable/shape_f1f1f3_bottom"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/pop_typecity_iv_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:clickable="true"
            android:onClick="onBtnClick"
            android:padding="@dimen/padding_16"
            android:src="@drawable/selector_pop_cancel" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>