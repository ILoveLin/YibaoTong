<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_15"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_image_horizontal"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:paddingLeft="@dimen/padding_5"
        android:paddingRight="@dimen/padding_5"
        android:paddingTop="@dimen/padding_14"
        android:paddingBottom="@dimen/padding_14"
        android:src="@mipmap/test"
        android:background="@drawable/shape_image_order_mine"
        />
    <View
        android:id="@+id/view_out"
        android:layout_width="@dimen/padding_10"
        android:visibility="visible"
        android:layout_height="wrap_content" />
</LinearLayout>