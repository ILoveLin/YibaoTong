<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:background="@color/color_f7f7f7"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtn_left"
                style="@style/ww"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="@dimen/padding_10"
                android:src="@drawable/selector_titlebar_left"
                android:textColor="@color/color_ffffff" />

            <TextView
                android:id="@+id/tv_title_name"
                style="@style/ww"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_20"
                android:ellipsize="end"
                android:ems="8"
                android:gravity="center"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_17" />

            <View
                android:id="@+id/v_title_line"
                style="@style/LineItemStyleE0E0E0"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_30"
                android:src="@mipmap/icon_yuding_finish"/>

            <TextView
                android:id="@+id/act_succ_success"
                style="@style/FontStyleBlack"
                android:textSize="@dimen/text_font_20"
                android:layout_marginBottom="@dimen/padding_10"
                android:text="@string/orderby_buy_success"/>

            <TextView
                android:id="@+id/act_succ_connect"
                style="@style/FontStyleGrey"
                android:textSize="@dimen/text_font_15"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/padding_20"
                android:text="@string/orderby_buy_contact"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:src="@mipmap/bg_yuding_shadow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginBottom="@dimen/padding_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_succ_back_home"
                style="@style/FontStyleGrey"
                android:textColor="@color/color_000000_90"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:text="@string/act_suc_back_to_home"
                android:background="@drawable/shape_bg_80000000"
                />

            <TextView
                android:id="@+id/act_succ_goto_order"
                style="@style/FontStyleGrey"
                android:textColor="@color/color_000000_90"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:layout_marginLeft="@dimen/padding_50"
                android:text="@string/act_suc_goto_order"
                android:background="@drawable/shape_bg_80000000"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/act_succ_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10"
            android:layout_margin="@dimen/padding_10"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

    <com.lzyc.ybtappcal.widget.redpacket.RedPacketGroup
        android:id="@+id/red_packed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
