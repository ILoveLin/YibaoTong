<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0"
        android:layout_weight="1"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_15"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_two_bt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20"
            android:text="提示"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_two_bt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="@dimen/padding_30"
            android:gravity="center"
            android:text="请先对订单进行评价"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_two_bt_cancel"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:textColor="@color/color_3e6398"
            android:textSize="@dimen/text_font_17" />

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/tv_two_bt_ok"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_15"
            android:textColor="@color/color_3e6398"
            android:textSize="@dimen/text_font_17" />

    </LinearLayout>


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0"
        android:layout_weight="1"
        />

</LinearLayout>