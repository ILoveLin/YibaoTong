<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f3">

    <LinearLayout
        android:id="@+id/drug_detail_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f1f1f3"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/results_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_180"
            android:background="@color/color_f1f1f3"
            android:src="@mipmap/bg_drug_empty" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e0e0e0"
            />

        <LinearLayout
            android:id="@+id/sresult_linear_content_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_5"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="190dp"
                    android:minWidth="0dp"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_font_16" />

                <TextView
                    android:id="@+id/tv_drug_detail_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_30"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_font_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_drug_detail_jiyao"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_bg_drug_drugtype"
                        android:gravity="center"
                        android:text="基药"
                        android:textColor="@color/color_3e6398"
                        android:textSize="@dimen/text_font_13" />

                    <TextView
                        android:id="@+id/tv_drug_detail_info"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_bg_drug_drugtype"
                        android:gravity="center"
                        android:text="乙类"
                        android:textColor="@color/color_3e6398"
                        android:textSize="@dimen/text_font_13" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_drug_detail_spec"
                style="@style/Font_Middle_Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/padding_12"
                android:textColor="@color/color_666666"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_f1f1f3"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e0e0e0"
            />
    </LinearLayout>

</RelativeLayout>



