<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_5"
    android:background="@color/color_f1f1f3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_message_system_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_9"
        android:paddingBottom="@dimen/padding_14"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_font_13" />

    <LinearLayout
        android:id="@+id/item_message_system_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@drawable/selector_item_radius_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.lzyc.ybtappcal.view.roundimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_recomment_iv_covert"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_system_logo"
                app:border_color2="@color/color_e0e0e0"
                app:border_width2="0dp"
                app:corner_radius2="@dimen/padding_5"
                app:oval2="true" />

            <TextView
                android:id="@+id/item_message_system_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_26"
                android:text="升级通知"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/padding_56"
            android:layout_marginTop="@dimen/padding_4"
            android:paddingBottom="@dimen/padding_7"
            android:paddingRight="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_message_system_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="医保通全面改版,新增医院/社区评价,修复了已知Bug,给您更好的体验."
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>











