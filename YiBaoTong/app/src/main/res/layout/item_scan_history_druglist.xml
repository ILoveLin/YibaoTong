<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_100"
        android:layout_marginLeft="@dimen/padding_7"
        android:layout_marginRight="@dimen/padding_7"
        android:background="@drawable/selector_bg_round_corner_mb_six"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_drugs_search_photo"
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_70"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:src="@mipmap/test" />

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:paddingRight="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_drugs_search_drugname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藿香正气水"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />

            <TextView
                android:id="@+id/item_drugs_search_drug_bar_code"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="@dimen/text_font_12"
                android:textColor="@color/color_bbbbbb"
                android:text="098979789897989"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
