<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_10"
    android:padding="@dimen/padding_10"
    android:orientation="vertical">

    <ImageView
        android:padding="@dimen/padding_5"
        android:id="@+id/iv_popup_druginfo_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_popup_close"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginBottom="@dimen/padding_40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_one_bt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:gravity="center"
            android:text="医保信息"
            style="@style/Font_Big_Black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_druginfo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医保甲类"
                android:paddingLeft="@dimen/padding_3"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"
                android:background="@mipmap/bg_text"
                style="@style/Font_Middle_White" />

            <TextView
                android:id="@+id/tv_druginfo_drug_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基药"
                android:layout_marginLeft="@dimen/padding_30"
                android:paddingLeft="@dimen/padding_3"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"
                android:background="@mipmap/bg_text"
                android:gravity="center"
                style="@style/Font_Middle_White" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_one_bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_14"
            android:text="限制条件："
            style="@style/Font_Big_Pink" />

        <ListView
            android:id="@+id/lv_popup_druginfo"
            style="@style/Style_lv"
            android:divider="@color/color_ffffff"/>
    </LinearLayout>


</LinearLayout>