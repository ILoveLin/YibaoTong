<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_pager_linear"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_70"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_10"
    android:paddingLeft="@dimen/padding_10"
    android:paddingTop="@dimen/padding_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_hp_pager_hpname"
            style="@style/FontStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="你好" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.lzyc.ybtappcal.view.StarBar
                android:id="@+id/item_hp_pager_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_2"
                android:visibility="gone"
                app:starCount="5"
                app:starDistance="5dp"
                app:starEmpty="@mipmap/icon_hospital_star_nor"
                app:starFill="@mipmap/icon_hospital_star_pre"
                app:starSize="16dp" />

            <TextView
                android:id="@+id/item_hp_pager_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_nav_erji" />

            <TextView
                android:id="@+id/item_hp_pager_yytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_9"
                android:text="社区医院"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_50"
                android:background="@mipmap/icon_nav_location" />

            <TextView
                android:id="@+id/item_hp_page_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:gravity="center"
                android:text="1.23km"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_14" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/padding_1"
        android:layout_height="match_parent"
        android:background="@color/color_e0e0e0"
         />

    <LinearLayout
        android:id="@+id/item_hp_pager_"
        android:layout_width="@dimen/navi_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10"
        android:visibility="visible">

        <TextView
            android:id="@+id/item_hp_pager_hpname2"
            style="@style/FontStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="你好" />

        <TextView
            android:id="@+id/item_hp_pager_level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_nav_erji" />

        <com.lzyc.ybtappcal.view.StarBar
            android:id="@+id/item_hp_pager_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_4"
            android:visibility="gone"
            app:starCount="5"
            app:starDistance="5dp"
            app:starEmpty="@mipmap/icon_hospital_star_nor"
            app:starFill="@mipmap/icon_hospital_star_pre"
            app:starSize="16dp" />
    </LinearLayout>


</LinearLayout>