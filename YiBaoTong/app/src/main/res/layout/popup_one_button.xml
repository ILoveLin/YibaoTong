<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_one_bt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_20"
            android:gravity="center"
            android:text="请先对订单进行评价"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_15"/>

    </LinearLayout>

    <View style="@style/LineStyleE5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_one_bt_ok"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:textColor="@drawable/selector_textview_3e63e98"
            android:textSize="@dimen/text_font_16"
            android:text="确定"
            />

    </LinearLayout>


</LinearLayout>