<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color">

    <RelativeLayout
        android:id="@+id/rel_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.lzyc.ybtappcal.view.xlist.XYbtRefreshListView
        android:id="@+id/x_listview"
        android:layout_below="@+id/v_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@dimen/padding_0"
        android:groupIndicator="@null"
        android:cacheColorHint="@color/color_000000_00"
        android:listSelector="@color/color_000000_00"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/lin_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/image_medicine_bag_shadow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@mipmap/icon_address_manager_build"
            android:background="@drawable/selector_item_ffffff"/>
    </LinearLayout>

    <!--<TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/icon_medicine_add"/>-->

</RelativeLayout>
