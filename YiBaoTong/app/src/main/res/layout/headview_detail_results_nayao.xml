<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drug_detail_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

    <RelativeLayout
        android:id="@+id/results_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:background="@color/color_f2f2f3">

        <ImageView
            android:src="@mipmap/test"
            android:id="@+id/results_detail_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_15"
            android:layout_centerVertical="true"
            android:background="@color/color_f2f2f3"
             />

        <ImageView
            android:src="@mipmap/icon_jieguo_jialei"
            android:id="@+id/img_drug_type"
            style="@style/FontStyleWhite"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding_10"
            android:padding="@dimen/padding_4"
            android:textSize="@dimen/text_font_10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/results_detail_image"
            android:background="@drawable/bg_buy_shadow" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/results_detail_drugname_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_12"
        android:layout_marginTop="-30dp"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="1"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_drug_detail_name"
            style="@style/FontStyle"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:text="络活喜"
            android:textSize="@dimen/text_font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_14"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drug_sign"
                    style="@style/FontStyleRed"
                    android:layout_marginBottom="@dimen/padding_1"
                    android:text="@string/act_check_order_price_sign"
                    android:textSize="@dimen/text_font_12" />

                <TextView
                    android:id="@+id/tv_drug_price"
                    style="@style/FontStyleRed"
                    android:text="00.00"
                    android:textSize="@dimen/text_font_16" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_hosp_price"
                style="@style/FontStyleRed"
                android:layout_width="@dimen/padding_48"
                android:layout_height="@dimen/padding_15"
                android:layout_marginLeft="@dimen/padding_5"
                android:background="@drawable/shape_red_hollow_circle"
                android:gravity="center"
                android:text="医院售价"
                android:textSize="@dimen/text_font_10" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_vender"
            style="@style/ww"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_12"
            android:layout_marginTop="@dimen/padding_15"
            android:text="厂商"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_font_14" />

        <View
            style="@style/LineItemStyleE0E0E0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_5"
            android:background="@color/color_f2f2f2"/>

        <View
            style="@style/LineItemStyleE0E0E0"/>

    </LinearLayout>

</LinearLayout>
