<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_popup_update" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:background="@drawable/shape_bottom_corner"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_20"
        android:paddingTop="@dimen/padding_10">

        <ListView
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_120"
            android:scrollbars="none"
            android:paddingRight="@dimen/padding_10"
            android:divider="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            >

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_updata_later"
                android:layout_width="@dimen/padding_95"
                android:layout_height="@dimen/padding_35"
                android:background="@drawable/shape_bg_white_border_green"
                android:gravity="center"
                android:text="稍后更新"
                android:textColor="@color/toast_green"
                android:textSize="@dimen/text_font_16" />

            <View
                android:visibility="gone"
                android:layout_width="@dimen/padding_0"
                android:layout_height="@dimen/padding_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_updata_now"
                android:layout_width="@dimen/padding_150"
                android:layout_height="@dimen/padding_35"
                android:layout_marginRight="@dimen/padding_20"
                android:background="@drawable/shape_bg_green"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_font_16" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/padding_1"
        android:layout_height="@dimen/padding_50"
        />

</LinearLayout>

