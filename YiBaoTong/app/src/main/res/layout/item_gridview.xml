<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_gridview_relativeLayout"
    android:background="@drawable/selector_item_ffffff"
    >
    <ImageView
        android:id="@+id/iv_item_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="@drawable/selector_item_ffffff"
        android:src="@mipmap/image_medicine"/>

        <TextView
            android:id="@+id/tv_item_gridview"
            style="@style/Font_Middle_White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60000000"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="药品名称" />

    <ImageView
        android:id="@+id/iv_item_gridview_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:padding="@dimen/padding_10"
        android:clickable="true"
        android:visibility="gone"
        android:src="@mipmap/icon_check_small_off"
        />
</RelativeLayout>