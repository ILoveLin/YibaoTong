<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">

    <View style="@style/LineItemStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pwd"
            style="@style/Font_Big_Black"
            android:textSize="@dimen/text_font_15"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_ffffff_00"
            android:drawableLeft="@mipmap/icon_change_pwd_green"
            android:drawablePadding="@dimen/padding_10"
            android:hint="原密码"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_5"
            android:paddingTop="@dimen/padding_10"
            android:textColorHint="@color/color_cccccc" />

        <CheckBox
            android:id="@+id/cb_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff_00"
            android:button="@drawable/selector_person_password"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10" />


    </LinearLayout>

    <View style="@style/LineStyleE5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_pwd_new"
            style="@style/Font_Big_Black"
            android:textSize="@dimen/text_font_15"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_ffffff_00"
            android:drawableLeft="@mipmap/icon_change_pwd_green"
            android:drawablePadding="@dimen/padding_10"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_5"
            android:textColorHint="@color/color_cccccc" />


        <CheckBox
            android:id="@+id/cb_pwd_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:background="@color/color_ffffff_00"
            android:button="@drawable/selector_person_password" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:layout_marginTop="@dimen/padding_80"
        android:background="@drawable/selector_btn_style"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onBtnClick"
        android:padding="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginBottom="@dimen/padding_20"
        android:text="提交"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_font_17" />



</LinearLayout>
