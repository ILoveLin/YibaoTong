<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/base_bg_titlebar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cancel"
            style="@style/ww"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:padding="@dimen/padding_10"
            android:src="@drawable/selector_titlebar_left"
            android:textColor="@drawable/selector_textview_3e63e98"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:text="@string/edit_title_nickname"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_font_17" />


        <TextView
            android:id="@+id/tv_save"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:clickable="true"
            android:text="@string/determine"
            android:textColor="@color/title_bar_right_color"
            android:textSize="@dimen/text_font_16" />

    </RelativeLayout>

    <View style="@style/LineItemStyleE0E0E0" />

    <com.lzyc.ybtappcal.view.ContainsEmojiEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@color/base_white"
        android:hint="@string/hint_edit_nickname"
        android:padding="@dimen/padding_10"
        android:textCursorDrawable="@drawable/shape_edit_focus"
        android:maxLines="1">

        <requestFocus />
    </com.lzyc.ybtappcal.view.ContainsEmojiEditText>
</LinearLayout>