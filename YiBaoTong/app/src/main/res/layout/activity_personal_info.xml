<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:id="@+id/person_linear"
    android:orientation="vertical">

    <View style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.lzyc.ybtappcal.view.roundimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_60"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_system_logo"
            app:border_color2="#60c1c1c1"
            app:border_width2="1dp"
            app:corner_radius2="@dimen/padding_5"
            app:oval2="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_forword_right0" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <View
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/padding_10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="昵称" />

        <TextView
            android:id="@+id/et_nickname"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_ffffff_00"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <LinearLayout
        android:id="@+id/linear_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="年龄" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <LinearLayout
        android:id="@+id/linear_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="性别" />

        <TextView
            android:id="@+id/tv_person_sex"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginBottom="@dimen/padding_10" />
    <View
        style="@style/LineStyle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="医保类型" />

        <TextView
            android:id="@+id/tv_yibao_type"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:text=""
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <LinearLayout
        android:id="@+id/linear_person_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="参保城市" />

        <TextView
            android:id="@+id/tv_canbao_city"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View style="@style/LineStyle" />
    <LinearLayout
        android:id="@+id/linear_dingdian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--定点-->
        <TextView
            android:id="@+id/tv_dingdian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:clickable="true"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:padding="@dimen/padding_10"
            android:text="定点医院"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_16" />
        <View style="@style/LineStyle"/>
        
    </LinearLayout>
    <View
        style="@style/LineStyle"
        android:layout_marginTop="@dimen/padding_10" />
    
    <TextView
        android:id="@+id/tv_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="@dimen/padding_10"
        android:drawableRight="@mipmap/icon_forword_right0"
        android:padding="@dimen/padding_10"
        android:background="@color/color_ffffff"
        android:text="修改密码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16" />

    <View style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font_Big_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="更改绑定" />

        <TextView
            android:id="@+id/tv_bind_change"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@mipmap/icon_forword_right0"
            android:gravity="right"
            android:padding="@dimen/padding_10"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>
    <View style="@style/LineStyle" />


</LinearLayout>
