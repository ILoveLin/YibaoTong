<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_50"
    android:background="@color/color_f7f7f8"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ib_left"
        style="@style/ww"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:onClick="onBtnClick"
        android:padding="@dimen/padding_10"
        android:src="@drawable/selector_titlebar_left"
        android:textColor="@color/color_ffffff" />

    <ImageButton
        android:id="@+id/ib_left_1"
        style="@style/ww"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="@dimen/padding_10"
        android:src="@drawable/selector_titlebar_registerleft"
        android:textColor="@color/color_ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/ww"
        android:layout_centerInParent="true"
        android:ems="8"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/title_bar_color"
        android:textSize="@dimen/text_font_17" />

    <TextView
        android:id="@+id/tv_right"
        style="@style/ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:clickable="true"
        android:onClick="onBtnClick"
        android:text="哈哈"
        android:visibility="gone"
        android:textColor="@color/title_bar_right_color"
        android:textSize="@dimen/text_font_16"
        />

    <ImageButton
        android:id="@+id/ib_right"
        style="@style/ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:onClick="onBtnClick"
        android:padding="@dimen/padding_10" />

</RelativeLayout>