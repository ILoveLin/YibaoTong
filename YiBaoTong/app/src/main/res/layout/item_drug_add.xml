<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/LineItemStyleE0E0E0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_5"
            android:background="@color/color_f2f2f2" />

        <View style="@style/LineItemStyleE0E0E0" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <LinearLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_100"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_selecter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/padding_20"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="@dimen/padding_20"
                android:src="@drawable/selector_shopping_selected" />

            <ImageView
                android:id="@+id/img_drug"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_70"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_11"
                android:layout_marginLeft="@dimen/padding_17"
                android:layout_marginRight="@dimen/padding_17"
                android:layout_marginTop="@dimen/padding_11"
                android:src="@mipmap/test" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_9"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_9"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--药品名-->
                <TextView
                    android:id="@+id/tv_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:lines="2"
                    android:text="安博维安博aa维安博维安博维安博维安博维安博维安博维安博维"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:id="@+id/tv_vender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0"
                    android:layout_marginBottom="@dimen/padding_4"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="邯郸制药股份有限公司"
                    android:textColor="@color/color_bfbfbf"
                    android:textSize="@dimen/text_font_12" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/v_shade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_100"
            android:background="@color/color_000000_08" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/padding_10"
            android:src="@mipmap/icon_add_medicine_tag"/>

    </FrameLayout>

</LinearLayout>
