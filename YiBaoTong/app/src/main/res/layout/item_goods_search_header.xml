<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goods_search_header"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">
    <TextView
        android:id="@+id/goods_header_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="没有找到相关信息!"
        android:paddingTop="@dimen/padding_30"
        android:paddingBottom="@dimen/padding_18"
        android:textSize="@dimen/text_font_15"
        android:includeFontPadding="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        >
        <View
            android:layout_width="@dimen/padding_0"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_cccccc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:textSize="@dimen/text_font_13"
            android:layout_marginBottom="@dimen/padding_2"
            android:textColor="@color/color_999999"
            android:text="你可能需要"
            />
        <View
            android:layout_width="@dimen/padding_0"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_cccccc"
            />
    </LinearLayout>
</LinearLayout>