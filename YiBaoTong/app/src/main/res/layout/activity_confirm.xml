<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f1f1f3"
        android:orientation="vertical">
        <!--产品信息-->
        <View style="@style/LineItemStyleE0E0E0" />

        <LinearLayout
            android:id="@+id/linear_drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_drug_empty"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_17"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/text_font_18" />

                    <TextView
                        android:id="@+id/tv_confirm_namefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:ellipsize="end"
                        android:maxEms="8"
                        android:minEms="0"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/text_font_14" />tv_confirm_num
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/tv_title_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_confirm_first"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_confirm_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_15"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_font_13" />

            <TextView
                android:id="@+id/tv_confirm_foctory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_5"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_font_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_11"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_7"
                        android:text=""
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/text_font_18" />

                    <TextView
                        android:id="@+id/tv_confirm_oprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_8"
                        android:layout_marginTop="@dimen/padding_7"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_font_14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="21dp"
                        android:layout_weight="1"></View>

                    <TextView
                        android:id="@+id/tv_confirm_num"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/shape_bg_confirm_hospitor"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:onClick="onBtnClick"
                        android:paddingLeft="@dimen/padding_14"
                        android:paddingRight="@dimen/padding_14"
                        android:text=""
                        android:textColor="#096844"
                        android:textSize="@dimen/text_font_15" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineItemStyleE0E0E0" />

        <!--标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_45"
            android:background="@color/color_f1f1f1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="同类药品"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/padding_14" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_2"
                android:layout_marginRight="@dimen/padding_10"
                android:text="(以北京医院为依据)"
                android:textColor="#666666"
                android:textSize="@dimen/text_font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_2"
                android:layout_marginRight="@dimen/padding_10"
                android:text="采纳医院数"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>


        <com.lzyc.ybtappcal.view.xlist.XYbtRefreshListView
            android:id="@+id/lv_confirm"
            style="@style/Style_lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!--<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:ptr="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/ptrsv_message"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:fillViewport="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--ptr:ptrAnimationStyle="flip"-->
        <!--ptr:ptrMode="both">-->

        <!--<com.lzyc.ybtappcal.widget.ExtraListView-->
        <!--android:id="@+id/lv_confirm"-->
        <!--style="@style/Style_lv"-->
        <!--android:layout_marginTop="@dimen/padding_10" />-->

        <!--</com.handmark.pulltorefresh.library.PullToRefreshScrollView>-->

    </LinearLayout>

    <include layout="@layout/include_loading_image" />

    <include layout="@layout/include_error_net" />
</RelativeLayout>

