<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_net_error_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:src="@mipmap/icon_error_net" />

    <TextView
        android:id="@+id/inculde_net_error_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="当前网络不可用，请检查网络设置"
        android:textSize="@dimen/text_font_16" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_40"
        android:gravity="center">

        <TextView
            android:id="@+id/include_net_setting_tv"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_btn_error_net"
            android:gravity="center"
            android:text="点击重试"
            android:textColor="@drawable/selector_textview_333333"
            android:textSize="@dimen/text_font_16" />

        <ProgressBar
            android:id="@+id/net_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>