<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_45"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_search_dim_name_goods"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_5"
            android:singleLine="true"
            android:text="联想搜索"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_14" />

        <TextView
            android:id="@+id/item_search_dim_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding_5"
            android:singleLine="true"
            android:text="联想搜索"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_font_13" />
    </LinearLayout>


    <View
        style="@style/LineItemStyleE0E0E0"
        android:layout_marginLeft="@dimen/padding_10" />
</LinearLayout>