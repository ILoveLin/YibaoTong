<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/viewlinew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10"
        android:background="@color/color_f1f1f3" />

    <View style="@style/LineItemStyleE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_15"
            android:src="@mipmap/image_drugs_picture" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--药品，价格-->
            <TextView
                android:id="@+id/rnodata_tv_goodsname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:lines="2"
                android:text="安博维安博维安博维安博维安博维安博维安博维安博维安博维"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rnodata_tv_price_rmb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/color_e52020"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/rnodata_tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_5"
                            android:text="4.68"
                            android:textColor="@color/color_e52020"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_yiyuanshoujia"
                        android:padding="@dimen/padding_5"
                        android:text="医院售价"
                        android:textColor="@color/color_59a9f8"
                        android:textSize="@dimen/text_font_8" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_rnodata_renkedu_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_renkedu_desc"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_8"
                    android:paddingRight="@dimen/padding_8"
                    android:paddingTop="@dimen/padding_5"
                    android:text="认可度"
                    android:textColor="@color/color_59a9f8"
                    android:textSize="@dimen/text_font_12" />

                <TextView
                    android:id="@+id/item_rnodata_renkedu_mingci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/shape_renkedu"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_8"
                    android:paddingRight="@dimen/padding_8"
                    android:paddingTop="@dimen/padding_5"
                    android:text="第1名"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/text_font_12" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rnodata_tv_spec"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:drawablePadding="@dimen/padding_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="（法国）赛诺菲温司罗普温司罗普温司罗普温司罗普温司罗普"
                    android:textColor="@color/color_b1b1b1"
                    android:textSize="@dimen/text_font_11" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>