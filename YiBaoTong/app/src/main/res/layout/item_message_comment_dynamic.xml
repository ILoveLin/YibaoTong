<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f1f1f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_12"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_15">

        <com.lzyc.ybtappcal.view.roundimageview.RoundedImageView
            android:id="@+id/item_message_dyn_avatar"
            android:layout_width="@dimen/padding_36"
            android:layout_height="@dimen/padding_36"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_system_logo"
            app:border_color2="@color/color_e0e0e0"
            app:border_width2="1dp"
            app:corner_radius2="@dimen/padding_5"
            app:oval2="true" />
        <!--<ImageView-->
            <!--android:id="@+id/item_message_dyn_avatar"-->
            <!--android:layout_width="@dimen/padding_36"-->
            <!--android:layout_height="@dimen/padding_36"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@mipmap/icon_mine_image" />-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_message_dyn_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="177****1234"
                    android:textColor="@color/color_5176b8"
                    android:textSize="@dimen/text_font_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_message_dyn_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_11"
                    android:text="9月9日 16:40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_13"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:id="@+id/item_message_dyn_content"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/padding_8"
                    android:maxEms="14"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="@dimen/text_font_14"
                    android:textColor="@color/color_555555"
                    android:text="别人回复我的"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/item_message_dyn_content2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="我的评价内容我的评价内容我的评价内容我的评价内容我的评价内容我的评价内容"
                    android:maxEms="4"
                    android:maxLines="3"
                    android:lineSpacingExtra="@dimen/padding_6"
                    android:textSize="@dimen/text_font_12"
                    android:textColor="@color/color_b9b9b9"
                    android:ellipsize="end"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/LineItemStyleE0E0E0" />
</LinearLayout>