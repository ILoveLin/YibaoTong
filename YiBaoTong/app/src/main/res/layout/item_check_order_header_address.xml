<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_8"
    android:layout_marginRight="@dimen/padding_8"
    android:layout_marginTop="@dimen/padding_8"
    android:background="@drawable/shape_order_check_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--添加收货地址-->
        <RelativeLayout
            android:id="@+id/rel_check_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_120"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/Font15Style666666"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/padding_21"
                android:drawablePadding="@dimen/padding_9"
                android:drawableTop="@mipmap/icon_tianjiadizh"
                android:text="@string/act_check_order_add_address" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_10"
                android:src="@mipmap/icon_order_check_right" />

        </RelativeLayout>

        <!---收货地址-->
        <LinearLayout
            android:id="@+id/lin_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <LinearLayout
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/FontStyle"
                    android:drawableLeft="@mipmap/icon_order_check_receiver"
                    android:drawablePadding="@dimen/padding_5"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/padding_2"
                    android:text="收货人信息"
                    android:textColor="@color/color_43454e" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_receiving_name"
                        style="@style/ww"
                        android:text="姓名"
                        android:textColor="@color/color_43454e"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:id="@+id/tv_receiving_call"
                        style="@style/FontStyle"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="1890990979"
                        android:textColor="@color/color_43454e" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_receiving_address"
                    style="@style/ww"
                    android:layout_marginRight="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/padding_2"
                    android:lines="2"
                    android:text="北京市北京市北京市北京市北京市北京市北京市北京市北京市北京市北京市北京市"
                    android:textColor="@color/color_43454e"
                    android:textSize="@dimen/text_font_13" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_order_check_right" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_2"
        android:layout_marginLeft="@dimen/padding_1"
        android:layout_marginRight="@dimen/padding_1"
        android:background="@mipmap/icon_jianchadingdan_youjitiao" />

</LinearLayout>
