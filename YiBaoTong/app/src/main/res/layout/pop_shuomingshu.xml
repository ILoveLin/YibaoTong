<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000_98"
    android:gravity="center"
    android:orientation="vertical">

    <!--弧度22   黄条高80  白条420  屏幕两边边距80   -->

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:background="@mipmap/icon_buy_toast"
            android:gravity="center"
            android:text="适应症"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_210"
            android:background="@drawable/shape_bottom_corner"
            android:fadeScrollbars="true"
            android:lineSpacingMultiplier="1.3"
            android:paddingBottom="@dimen/padding_12"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/padding_12"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_50"
            android:background="@mipmap/icon_shuomingshu_cancle" />

    </LinearLayout>

</LinearLayout>
