<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_choose_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_9"
            android:text="回龙观社区服务中心"
            android:textColor="#333333"
            android:textSize="@dimen/text_font_16" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_6">

            <com.lzyc.ybtappcal.view.StarBar
                android:id="@+id/tv_choose_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:starCount="5"
                app:starDistance="5dp"
                app:starEmpty="@mipmap/icon_hospital_star_nor"
                app:starFill="@mipmap/icon_hospital_star_pre"
                app:starSize="18dp" />


            <TextView
                android:id="@+id/tv_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_7"
                android:text="社区医院" />

        </LinearLayout>
    </LinearLayout>


    <View style="@style/LineItemStyleE0E0E0" />

</LinearLayout>