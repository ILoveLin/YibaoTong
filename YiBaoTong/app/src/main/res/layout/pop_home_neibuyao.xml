<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:id="@+id/pop_neibuyao_iv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_70"
        android:src="@drawable/bg_pop_neibuyao_top"
        android:layout_marginTop="@dimen/padding_3"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="@dimen/padding_190"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pop_neibuzhiji"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_11"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/drug_list_neibuyao_title"
            android:textColor="@color/color_116eb2"
            android:textSize="@dimen/text_font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/padding_5"
            android:text="@string/drug_list_neibuyao_content"
            android:textColor="@color/color_116eb2"
            android:textSize="@dimen/text_font_14" />
    </LinearLayout>
    <ImageView
        android:id="@+id/pop_neibuyao_iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_pop_neibuyao_bottom"
        android:layout_marginLeft="@dimen/padding_70"
        android:layout_marginBottom="@dimen/padding_3"
        android:visibility="visible"
        />
</LinearLayout>
