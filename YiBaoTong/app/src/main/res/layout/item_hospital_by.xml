<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-5dp"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top_line"
        android:layout_width="1dp"
        android:layout_height="@dimen/padding_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wode"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="2.7"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/FontStyleBlack"
                    android:layout_width="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="中国医学科学院北京协和医院中国医学科学院北京协和医院中国医学科学院北京协和医院中国医学科学院北京协和医院中国医学科学院北京协和医院中国医学科学院北京协和医院" />

                <TextView
                    android:id="@+id/et_phone"
                    style="@style/FontStyleGrey"
                    android:layout_marginTop="@dimen/padding_20"
                    android:drawableLeft="@mipmap/icon_liebiao_dianhua_wu"
                    android:drawablePadding="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:text="暂无电话" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/FontStyleGrey"
                    android:textSize="@dimen/text_font_13"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@+id/tv_call"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_5"
                    android:text="东城区王府井帅府园1号东城区王府井帅府园1号东城区王府井帅府园1号" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/icon_hospital_by1"
                android:gravity="right|center"
                android:layout_gravity="top"
                android:paddingRight="@dimen/padding_7"
                android:text="三级甲等"
                android:textColor="@color/color_149c4e"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
