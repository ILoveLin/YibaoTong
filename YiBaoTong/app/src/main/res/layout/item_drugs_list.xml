<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bgitem_item_drug"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_linear_drug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <RelativeLayout
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:gravity="center">

            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_image_drug1" />

            <ImageView
                android:id="@+id/item_drugs_search_photo"
                android:layout_width="@dimen/padding_65"
                android:layout_height="@dimen/padding_65"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_2"
                android:background="@drawable/shape_image_drug"
                android:src="@mipmap/image_drugs_picture" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/padding_20">

                <TextView
                    android:id="@+id/item_drugs_search_drugname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:textColor="@color/color_464545"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:id="@+id/item_drugs_search_name"
                    style="@style/Font_Small_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:singleLine="true" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_drugs_search_drugs_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="0.25g (每片量) *100/盒"
                android:layout_marginRight="@dimen/padding_20"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/text_font_12" />

            <LinearLayout
                android:id="@+id/item_drugs_search_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/padding_5">

                <TextView
                    android:id="@+id/item_drugs_search_address"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邯郸制药股份有限公司"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="@dimen/padding_10"
                    android:textColor="@color/color_bfbfbf"
                    android:textSize="@dimen/text_font_12" />

                <TextView
                    android:id="@+id/item_drugs_search_time"
                    android:textSize="@dimen/text_font_13"
                    android:textColor="@color/color_999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/LineStyleE5E5E5"/>
</LinearLayout>
