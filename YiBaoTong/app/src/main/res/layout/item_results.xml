<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_5"
        android:background="@color/color_f1f1f3" />

    <View style="@style/LineItemStyleE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        >
        <RelativeLayout
            android:layout_width="@dimen/padding_150"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/results_drug_image_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/image_drugs_picture" />
            <ImageView
                android:id="@+id/results_drug_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/icon_results_drug_current"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:orientation="vertical">
            <!--药品名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/results_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="安博维安博维安博维安博维安博维安博维安博维安博维安博维"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_font_14" />
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/padding_40"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/padding_2"
                    android:layout_height="@dimen/padding_14"
                    android:text="报销"
                    android:visibility="gone"
                    android:background="@drawable/shape_results_baoxiao"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/text_font_10"
                    />
            </RelativeLayout>
            <!--认可度-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="认可度第"
                    android:textColor="@color/color_4faaff"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:id="@+id/results_drug_renkedu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/color_006bce"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名"
                    android:textColor="@color/color_4faaff"
                    android:textSize="@dimen/text_font_14" />

            </LinearLayout>
            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_results_drug_price_qian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb_symbol"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_10" />

                <TextView
                    android:id="@+id/results_drug_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36.64"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_yiyuanshoujia"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:text="医院售价"
                    android:layout_marginBottom="2.5dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_10" />
            </LinearLayout>
            <TextView
                android:id="@+id/results_drug_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="邯郸制药股份有限公司"
                android:textColor="@color/color_bfbfbf"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>
    </LinearLayout>
    <View style="@style/LineItemStyleE0E0E0" />


</LinearLayout>