<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_110"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/selector_bg_round_corner_mb"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginRight="@dimen/padding_12"
            android:layout_marginTop="@dimen/padding_12"
            android:src="@mipmap/icon_medicine_girl" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/FontStyleBlack"
                android:text="功夫"
                android:textSize="@dimen/text_font_16" />

            <TextView
                android:id="@+id/tv_medicine_num"
                style="@style/ww"
                android:layout_marginTop="@dimen/padding_10"
                android:text="暂时还没有药品"
                android:textColor="@color/color_b3b3b3"
                android:textSize="@dimen/text_font_13" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_12"
            android:src="@mipmap/icon_family_bag_more" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/FontStyleGrey"
            android:layout_below="@+id/img_icon"
            android:layout_marginLeft="@dimen/padding_24"
            android:layout_marginRight="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_8"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="100岁100岁100岁100岁100岁100岁100岁100岁100岁100岁100岁100岁"
            android:textSize="@dimen/text_font_13" />

    </RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_100"/>

</LinearLayout>
