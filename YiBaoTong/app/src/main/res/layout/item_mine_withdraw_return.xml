<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_10">

    <View
        android:visibility="gone"
        android:id="@+id/v_top"
        android:layout_width="1dp"
        android:layout_height="@dimen/padding_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_5"
            android:background="@mipmap/icon_fanxian_1"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/FontStyleBlack"
                android:layout_marginBottom="@dimen/padding_5"
                android:text="fkjg"/>

            <TextView
                android:id="@+id/tv_create_time"
                style="@style/FontStyleGrey"
                android:textSize="@dimen/text_font_12"
                android:text="2017-04-12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="vertical">

            <View
                android:id="@+id/v_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_10"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_sign"
                   style="@style/FontStyleBlack"
                   android:textSize="@dimen/text_font_13"
                   android:text="￥" />

               <TextView
                   android:id="@+id/tv_balance"
                   style="@style/FontStyleBlack"
                   android:textSize="@dimen/text_font_17"
                   android:text="8.00"/>

               <ImageView
                   android:visibility="invisible"
                   android:id="@+id/tv_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/padding_5"
                   android:background="@mipmap/icon_forword_right0"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_deleted"
                    style="@style/FontStyleGrey"
                    android:background="@drawable/shape_bg_kongxin"
                    android:paddingBottom="@dimen/padding_1"
                    android:paddingLeft="@dimen/padding_3"
                    android:paddingRight="@dimen/padding_3"
                    android:paddingTop="@dimen/padding_1"
                    android:text="已删除"
                    android:textSize="@dimen/text_font_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/tv_icon_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:background="@mipmap/icon_forword_right0"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/v_line"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginLeft="35dip"
        style="@style/LineStyleE5E5E5" />

    <View
        android:visibility="gone"
        android:id="@+id/v_bottom"
        android:layout_width="1dp"
        android:layout_height="@dimen/padding_10"/>

</LinearLayout>