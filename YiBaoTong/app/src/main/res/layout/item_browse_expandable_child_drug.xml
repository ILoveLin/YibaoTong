<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/child_expandable_drug"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">
    <View style="@style/LineStyle"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/padding_20"
        android:paddingBottom="@dimen/padding_20"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:src="@drawable/selector_shopping_selected" />
    <ImageView
        android:id="@+id/item_drugs_search_photo"
        android:layout_width="@dimen/padding_150"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:src="@mipmap/image_drugs_picture" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_15"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--药品名-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_drugs_search_drugname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:lines="2"
                android:text="安博维安博维安博维安博维安博维安博维安博维安博维安博维"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />

            <TextView
                android:layout_width="@dimen/padding_40"
                android:layout_height="@dimen/padding_14"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/padding_2"
                android:background="@drawable/shape_results_baoxiao"
                android:gravity="center"
                android:text="报销"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_font_10"
                android:visibility="gone" />
        </RelativeLayout>

        <!--价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/item_drugs_search_drugs_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb_symbol"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_font_10" />

            <TextView
                android:id="@+id/item_drugs_search_drugs_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.64"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_font_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_2"
                android:layout_marginLeft="@dimen/padding_5"
                android:background="@drawable/shape_yiyuanshoujia"
                android:paddingLeft="@dimen/padding_5"
                android:paddingRight="@dimen/padding_5"
                android:text="医院售价"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_font_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_drugs_search_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="邯郸制药股份有限公司"
            android:textColor="@color/color_bfbfbf"
            android:textSize="@dimen/text_font_12" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>