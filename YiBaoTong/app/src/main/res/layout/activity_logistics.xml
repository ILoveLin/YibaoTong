<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:src="@mipmap/image_empty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:orientation="horizontal"
                android:paddingRight="@dimen/padding_10">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_font_17" />

                <TextView
                    android:id="@+id/tv_copy_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_oval"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_5"
                    android:text="复制单号"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_15" />

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/LineStyleE5E5E5"
        android:background="@color/color_dddddd"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTrace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />


    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_100"
        android:drawablePadding="@dimen/padding_10"
        android:drawableTop="@mipmap/icon_wuliu_null"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>