<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_40"
    android:background="@drawable/shape_ffffff_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_11"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_two_bt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding_10"
            android:text="版本更新"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/dialog_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_40"
            android:layout_marginRight="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.3"
            android:text="新增新手引导\n优化UI界面\n完善数据库\n修复已知bug"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_font_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dilog_tv_cancel"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="以后再说"
            android:textColor="@drawable/selector_textview_333333"
            android:textSize="@dimen/text_font_16" />

        <View
            android:id="@+id/dialog_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_4"
            android:layout_marginTop="@dimen/padding_4"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/dilog_tv_ok"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即更新"
            android:textStyle="bold"
            android:textColor="@drawable/selector_textview_0c81df"
            android:textSize="@dimen/text_font_16" />

    </LinearLayout>


</LinearLayout>