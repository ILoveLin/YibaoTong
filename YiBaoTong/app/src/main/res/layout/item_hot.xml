<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_5"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10"
    android:paddingTop="@dimen/padding_11">

    <ImageView
        android:id="@+id/img_drug"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_drug_price"
            style="@style/FontStyleBlack"
            android:text="26.00元"
            android:textColor="@color/color_000000_90" />

        <TextView
            style="@style/FontStyleWhite"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:background="@mipmap/ba_home_page_tag"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_2"
            android:paddingRight="@dimen/padding_2"
            android:text="@string/home_return"
            android:textSize="@dimen/text_font_10" />

        <TextView
            android:id="@+id/tv_return_price"
            style="@style/FontStyleRed"
            android:text="4"
            android:textColor="@color/color_f53838"
            android:textSize="@dimen/text_font_17" />

        <TextView
            style="@style/FontStyleRed"
            android:text="元"
            android:textColor="@color/color_f53838" />

    </LinearLayout>

</LinearLayout>