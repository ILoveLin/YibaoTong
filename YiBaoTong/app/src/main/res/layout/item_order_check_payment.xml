<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:background="@color/color_f7f7f7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pharmacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yaodian_logo_dekai"/>

        <TextView
            android:id="@+id/tv_pharmacy"
            style="@style/FontStyle"
            android:layout_weight="1"
            android:textColor="@color/color_1291ee"
            android:layout_marginLeft="@dimen/padding_10"
            android:text="德开大药房"/>

        <TextView
            android:id="@+id/tv_drug_num"
            style="@style/FontStyleGrey"
            android:textSize="@dimen/text_font_14"
            android:text="共2件商品"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:background="@color/color_f7f7f7"
        android:orientation="horizontal">

        <TextView
            style="@style/FontStyleBlack"
            android:textSize="@dimen/text_font_14"
            android:text="@string/order_check_total"/>

        <TextView
            style="@style/FontStyleBlack"
            android:textSize="@dimen/padding_12"
            android:layout_marginLeft="@dimen/padding_5"
            android:text="@string/order_check_include_freight"/>

        <TextView
            style="@style/FontStyleBlack"
            android:textSize="@dimen/text_font_10"
            android:layout_marginLeft="@dimen/padding_5"
            android:text="@string/act_check_order_price_sign"/>

        <TextView
            android:id="@+id/tv_price"
            style="@style/FontStyleBlack"
            android:layout_marginLeft="@dimen/padding_3"
            android:text="56.58"/>

    </LinearLayout>

    <View
        style="@style/LineItemStyleE0E0E0"/>

</LinearLayout>
