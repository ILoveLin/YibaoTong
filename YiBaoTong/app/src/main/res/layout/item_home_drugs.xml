<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_126"
            android:background="@color/color_f8f8f8"
            android:gravity="center_horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_home_drug"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/image_empty_no_bg" />
            <!--<ImageView-->
            <!--android:id="@+id/item_home_drug"-->
            <!--android:layout_width="130dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:scaleType="centerInside"-->
            <!--/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_11"
            android:layout_marginTop="@dimen/padding_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_name"
                style="@style/FontStyleBlack"
                android:layout_marginRight="@dimen/padding_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_444444" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_6"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_2"
            android:layout_marginLeft="@dimen/padding_11"
            android:layout_marginTop="@dimen/padding_2"
            android:gravity="center_vertical|bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/FontStyleBlack"
                android:text="@string/act_check_order_price_sign"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_11" />

            <TextView
                android:id="@+id/item_home_drug_price"
                style="@style/FontStyleBlack"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/text_font_15" />

            <TextView
                style="@style/FontStyleWhite"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_15"
                android:layout_marginBottom="@dimen/padding_1"
                android:layout_marginLeft="@dimen/padding_3"
                android:layout_marginRight="@dimen/padding_3"
                android:background="@drawable/shape_red_hollow_rectangle"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_3"
                android:paddingRight="@dimen/padding_3"
                android:text="@string/home_return"
                android:textSize="@dimen/text_font_10" />

            <TextView
                style="@style/FontStyleRed"
                android:layout_marginTop="@dimen/padding_1"
                android:text="@string/act_check_order_price_sign"
                android:textSize="@dimen/text_font_11" />

            <TextView
                android:id="@+id/tv_return_money"
                style="@style/FontStyleRed"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_font_15" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/Style_vLine_E0E0E0"
        android:layout_marginBottom="@dimen/padding_5"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5" />

    <View
        style="@style/LineItemStyleE0E0E0"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5" />


    <View
        style="@style/Style_vLine_E0E0E0"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_marginTop="@dimen/padding_5" />

    <View
        style="@style/LineItemStyleE0E0E0"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_5"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5" />

</FrameLayout>
