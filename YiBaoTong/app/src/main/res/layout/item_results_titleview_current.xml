<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_title_view"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/shape_ffffff_10"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_sort_renkedu"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_17"
                android:layout_marginRight="@dimen/padding_21"
                android:alpha="1"
                android:background="@drawable/shape_top_results"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_sort_renkedu_current"
                android:layout_width="@dimen/titleview_left_width"
                android:layout_height="match_parent"
                android:background="@drawable/shape_results_item_left_current"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/padding_38"
                android:alpha="0"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_results_item_right"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_15"
            android:paddingTop="@dimen/padding_15">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title_drugname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_10"
                    android:singleLine="true"
                    android:text="安博维 厄贝沙坦片(薄膜衣)"
                    android:textColor="@color/color_666666"
                    android:alpha="1"
                    android:textSize="@dimen/padding_16" />
                <TextView
                    android:id="@+id/tv_title_drugname_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_10"
                    android:text="安博维 厄贝沙坦片(薄膜衣)"
                    android:textColor="@color/color_666666"
                    android:alpha="0"
                    android:textSize="@dimen/padding_16" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_title_vender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/padding_5"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="(法国)赛诺菲-温斯洛普公司"
                android:textColor="@color/color_999ea1"
                android:paddingRight="@dimen/padding_10"
                android:textSize="@dimen/text_font_14" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>