<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f3"
    >
    <View style="@style/LineItemStyleE0E0E0"/>
    <LinearLayout
        android:id="@+id/item_hc_linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_15"
                android:gravity="center|left"
                android:orientation="horizontal">

                <com.lzyc.ybtappcal.view.roundimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/item_recomment_iv_covert"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/image_default_avatar_hospital"
                    app:border_color2="@color/color_e0e0e0"
                    app:border_width2="0dp"
                    app:corner_radius2="@dimen/padding_5"
                    app:oval2="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="13881005611"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/padding_13" />

                <com.lzyc.ybtappcal.view.RatingBar xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/test_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:starCount="5"
                    app:starDistance="7dp"
                    app:starEmpty="@mipmap/icon_hospital_star_nor"
                    app:starFill="@mipmap/icon_hospital_star_pre"
                    app:starSize="@dimen/padding_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_12"
                    android:text="4.0分"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_font_12" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:text="服务态度良好，拿药也很方便，在这那的要也比旁边的药店便宜很多，非常推荐"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-06-20"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item_hc_iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_4"
                    android:src="@drawable/selector_hc_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_11" />

                <ImageView
                    android:id="@+id/item_hc_iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:layout_marginRight="@dimen/padding_4"
                    android:src="@mipmap/icon_hospital_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_font_11" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineItemStyleE0E0E0" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂无回复"
        android:paddingBottom="@dimen/padding_2"
        android:paddingTop="@dimen/padding_2"
        android:paddingLeft="@dimen/padding_10"
        android:textSize="@dimen/text_font_12"
        />

</LinearLayout>