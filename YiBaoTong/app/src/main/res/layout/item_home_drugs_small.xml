<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_90">

        <ImageView
            android:id="@+id/item_home_drug_small"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_11"
            android:layout_marginRight="@dimen/padding_11"
            android:layout_marginTop="@dimen/padding_13"
            android:layout_marginBottom="@dimen/padding_13"
            android:scaleType="centerInside"
            android:src="@mipmap/test" />

        <TextView
            android:id="@+id/item_home_return_price_small"
            style="@style/FontStyleWhite"
            android:layout_width="wrap_content"
            android:background="@color/color_fe1d42"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/padding_1"
            android:paddingLeft="@dimen/padding_3"
            android:paddingRight="@dimen/padding_3"
            android:paddingTop="@dimen/padding_1"
            android:text="返现99.99"
            android:textSize="@dimen/text_font_10" />

        <View style="@style/Style_vLine_E0E0E0" />

        <View style="@style/LineItemStyleE0E0E0" />

        <View
            style="@style/Style_vLine_E0E0E0"
            android:layout_gravity="right" />

        <View
            style="@style/LineItemStyleE0E0E0"
            android:layout_gravity="bottom" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_11"
        android:layout_marginTop="@dimen/padding_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_name_small"
            style="@style/FontStyleBlack"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="立普妥"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/tv_name_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="阿卡伐他汀钙"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_font_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_2"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal">

        <TextView
            style="@style/FontStyleBlack"
            android:text="@string/act_check_order_price_sign"
            android:textColor="@color/color_f63636"
            android:textSize="@dimen/text_font_10" />

        <TextView
            android:id="@+id/item_home_drug_price_small"
            style="@style/FontStyleBlack"
            android:text="90.97"
            android:textColor="@color/color_f63636"
            android:textSize="@dimen/text_font_14" />

    </LinearLayout>

</LinearLayout>
